@using MaleFashionApp.Entities
@{
    var postInfo = (Post)Model;
}

<!-- Hero -->
<section class="blog-hero spad">
    <div class="container text-center">
        <h2>@postInfo.Title</h2>
        <p class="text-muted">
            @postInfo.Published?.ToString("MMMM dd, yyyy")
        </p>
        <p>@postInfo.Slogan</p>
    </div>
</section>

<!-- Post Details -->
<section class="blog-details spad">
    <div class="container">

        <!-- Image -->
        <div class="blog__details__pic text-center mb-4">
            <img src="~/@postInfo.ImgSrc" alt="@postInfo.ImgAlt" class="img-fluid">
        </div>

        <!-- Content -->
        <div class="blog__details__text">
            @Html.Raw(postInfo.Content)
        </div>

        <!-- Categories -->
        <div class="mt-4">
            @foreach (var category in postInfo.Categories)
            {
                <a href="/blog?category=@category.Slug" class="badge badge-light">
                    @category.Title
                </a>
            }
        </div>

        <!-- Tags -->
        <div class="mt-3">
            @foreach (var tag in postInfo.Tags)
            {
                <a href="/blog?tag=@tag.Slug" class="tag-item">
                    #@tag.Title
                </a>
            }
        </div>

    </div>
</section>